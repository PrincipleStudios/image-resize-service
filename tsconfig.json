{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": ["esnext"],

		"strict": true,
		// Disallow JavaScript files from being imported
		"allowJs": false,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,

		"outDir": "dist",
		"rootDir": ".",
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"./*"
			]
		}
	},
	"include": ["src"]
}